@{
    ViewData["Title"] = "Login";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-controller="Usuario" asp-action="Login" method="post" class="mt-5">
                <div class="text-danger">
                    <!-- Exibir mensagens de validação aqui, se necessário -->
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Email" class="control-label">E-mail:</label>
                    <input type="text" name="email" class="form-control" required />
                    <!-- Exibir mensagens de validação para Email aqui, se necessário -->
                    @Html.ValidationMessage("Email", "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <label for="Senha" class="control-label">Senha:</label>
                    <input type="password" name="senha" class="form-control" required />
                    <!-- Exibir mensagens de validação para Senha aqui, se necessário -->
                    @Html.ValidationMessage("Senha", "", new { @class = "text-danger" })
                </div>
                <br>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Entrar</button>
                </div>
            </form>
            <br>
            <div class="form-group">
                <a href="@Url.Action("Register", "Usuario")" class="btn btn-secondary">Registrar-se</a>
            </div>
        </div>
    </div>
</div>
