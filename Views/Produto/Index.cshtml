@model IEnumerable<AppCurso.Models.Produto>

@{
    ViewData["Title"] = "Listagem dos Produtos";
}

<h3>Listagem de Produtos</h3>

<p>
    <a asp-action="Create">Criar um novo Produto</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Descricao)
            </th>
            <th style="color: white;">
                @Html.DisplayNameFor(model => model.Preco)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="color: #DCDCDC;">
                    @Html.DisplayFor(modelItem => item.Descricao)
                </td>
                <td style="color: #DCDCDC;">
                    @item.Preco.ToString("C")
                </td>
                <td style="color: #df6919; font-size: 1.1em;">
                    <span style="margin-right: 5px;">
                        <a asp-action="Edit" asp-route-id="@item.Id"
                            style="color: #df6919; text-decoration: underline;">Editar</a>
                    </span>
                    <span style="margin-right: 5px;">
                        <a asp-action="Details" asp-route-id="@item.Id"
                            style="color: #df6919; text-decoration: underline;">Detalhar</a>
                    </span>
                    <span style="margin-right: 5px;">
                        <a asp-action="Delete" asp-route-id="@item.Id"
                            style="color: #df6919; text-decoration: underline;">Deletar</a>
                    </span>
                </td>
            </tr>
        }
    </tbody>
</table>
